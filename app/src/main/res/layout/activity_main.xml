<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61B3A5A5"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/zero2"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/two"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/dot"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/zero2"
        app:layout_constraintTop_toBottomOf="@+id/three"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/screen"
        android:layout_width="wrap_content"
        android:layout_height="160sp"
        android:layout_gravity="top"
        android:background="#DCC79C"
        android:clickable="false"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:foregroundGravity="top"
        android:gravity="center|end"
        android:inputType="textMultiLine"
        android:padding="10sp"
        android:selectAllOnFocus="false"
        android:shadowColor="#000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clear"
        android:layout_width="82sp"
        android:layout_height="82dp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="C"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/seven"
        app:layout_constraintEnd_toStartOf="@+id/erase"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screen" />

    <Button
        android:id="@+id/eight"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/five"
        app:layout_constraintEnd_toStartOf="@+id/nine"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seven"
        app:layout_constraintTop_toBottomOf="@+id/erase" />

    <Button
        android:id="@+id/nine"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="9"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/six"
        app:layout_constraintEnd_toStartOf="@+id/multiply"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintTop_toBottomOf="@+id/percent" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="×"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nine"
        app:layout_constraintTop_toBottomOf="@+id/divide" />

    <Button
        android:id="@+id/seven"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="7"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/four"
        app:layout_constraintEnd_toStartOf="@+id/eight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/six"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="6"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/three"
        app:layout_constraintEnd_toStartOf="@+id/minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/nine" />

    <Button
        android:id="@+id/minus"
        android:layout_width="82dp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/six"
        app:layout_constraintTop_toBottomOf="@+id/multiply" />

    <Button
        android:id="@+id/five"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="5"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/two"
        app:layout_constraintEnd_toStartOf="@+id/six"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/eight" />

    <Button
        android:id="@+id/four"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="4"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/one"
        app:layout_constraintEnd_toStartOf="@+id/five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seven" />

    <Button
        android:id="@+id/one"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <Button
        android:id="@+id/zero"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|left"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="50sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/zero2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/equals"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="50sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toBottomOf="@+id/plus"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/two"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/five" />

    <Button
        android:id="@+id/plus"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/three"
        app:layout_constraintTop_toBottomOf="@+id/minus" />

    <Button
        android:id="@+id/three"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toBottomOf="@+id/six" />

    <Button
        android:id="@+id/erase"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="←"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/eight"
        app:layout_constraintEnd_toStartOf="@+id/percent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clear"
        app:layout_constraintTop_toBottomOf="@+id/screen" />

    <Button
        android:id="@+id/percent"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="%"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/nine"
        app:layout_constraintEnd_toStartOf="@+id/divide"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/erase"
        app:layout_constraintTop_toBottomOf="@+id/screen" />

    <Button
        android:id="@+id/divide"
        android:layout_width="82sp"
        android:layout_height="82sp"
        android:layout_gravity="center|right"
        android:layout_marginTop="5sp"
        android:width="100sp"
        android:height="100sp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="÷"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/percent"
        app:layout_constraintTop_toBottomOf="@+id/screen" />

</androidx.constraintlayout.widget.ConstraintLayout>